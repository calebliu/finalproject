<h1>Transactions</h1>
	<br></br>
	
	<div class="btn-group">
	<p>Sort By:</p>
	  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		Date <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu" role="menu">
		<li><a href="#">Category</a></li>
		<li><a href="#">Amount</a></li>
		<li><a href="#">Vendor</a></li>
	  </ul>
	</div>
	<br><a href="/Transactions/New">Add Item</a>
	<br></br>
	
	<% if @trans_list.nil? || @trans_list.empty?%>
		<p>There are no transactions associated with this user</p>
	<%else%>

	<table class="table table-bordered table-striped">
		<tr>
			<th>Date</th>
			<th>Title</th>
			<th>Category</th>
			<th>Vendor</th>
			<th>Amount</th>
			<th>Delete Transaction</th>
		</tr>

	
		<% @trans_list.each do |trans| %>
		<tr>
			<td><%= trans.date %></td>
			<td><%= trans.title %></td>
			<% cat = Category.all.find_by(:id => trans.category_id) %>
			<td><%= cat.name %></td>
			<td><%= trans.vendor %></td>
			<td><%= trans.amount %></td>
			<td><%= link_to "Delete", "/transactions/#{trans.id}/delete" %></td>
		</tr>
		<% end %>
	<%end%>
	</table>
